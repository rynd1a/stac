<Page x:Class="stac.StacSluch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:stac"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="StacSluch" Loaded="Page_Loaded">

    <Grid Background="#F4F4F4">
        <DataGrid x:Name="Sluch" d:ItemsSource="{d:SampleData ItemCount=2}" Margin="10,40,154,28" ColumnWidth="*">
            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                </Style>
            </DataGrid.ItemContainerStyle>
        </DataGrid>
        <Button x:Name="ButtonAdd" FontSize="15" Content="Создать случай" HorizontalAlignment="Left" Margin="651,40,0,0" VerticalAlignment="Top" Foreground="White" Height="36" Width="124" Background="#34495E" Click="ButtonAdd_Click" />
        <Button x:Name="ButtonDel" FontSize="15" Content="Удалить запись" HorizontalAlignment="Left" Margin="651,100,0,0" VerticalAlignment="Top" Foreground="White" Height="36" Width="124" Background="#34495E" Click="ButtonDel_Click" />
    </Grid>
</Page>
