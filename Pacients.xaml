<Page x:Class="stac.Pacients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:stac"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pacients">

    <Grid Background="#F4F4F4">
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,40,176,28"/>
        <Button x:Name="ButtonAdd" FontSize="15" Content="Новая запись" HorizontalAlignment="Left" Margin="651,40,0,0" VerticalAlignment="Top" Foreground="White" Height="36" Width="124" Background="#34495E" Click="ButtonAdd_Click" />
        <Button x:Name="ButtonDel" FontSize="15" Content="Удалить запись" HorizontalAlignment="Left" Margin="651,100,0,0" VerticalAlignment="Top" Foreground="White" Height="36" Width="124" Background="#34495E" />
    </Grid>
</Page>
