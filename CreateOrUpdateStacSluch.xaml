<Window x:Class="stac.CreateOrUpdateStacSluch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stac"
        mc:Ignorable="d"
        Title="Стационарный случай" Height="600" Width="800">
    <Grid Background="#F4F4F4">
        <TextBox HorizontalAlignment="Left" Margin="126,30,0,0" FontSize="15" Background="#D9D9D9" Foreground="#747373" TextWrapping="Wrap" Text="Пациент" VerticalAlignment="Top" Width="290" Height="30" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" Margin="126,158,0,0" FontSize="15" Background="#D9D9D9" Foreground="#747373" TextWrapping="Wrap" Text="Диагноз" VerticalAlignment="Top" Width="290" Height="30" />
        <DatePicker HorizontalAlignment="Left" Margin="126,72,0,0" VerticalAlignment="Top" Width="290" Background="#D9D9D9" Foreground="#747373" Height="30"/>
        <ComboBox HorizontalAlignment="Left" Margin="126,198,0,0" VerticalAlignment="Top" Width="290" Background="#D9D9D9" Foreground="#747373" Height="30"/>
        <Button x:Name="ButtonTrans" FontSize="15" Content="Перевести пациента" HorizontalAlignment="Left" Margin="529,110,0,0" VerticalAlignment="Top" Foreground="White" Height="36" Width="160" Background="#34495E" Click="ButtonTrans_Click" />
        <Button x:Name="ButtonClose" FontSize="15" Content="Закрыть случай" HorizontalAlignment="Left" Margin="529,164,0,0" VerticalAlignment="Top" Foreground="White" Height="36" Width="160" Background="#34495E" />
        <DatePicker HorizontalAlignment="Left" Margin="126,117,0,0" VerticalAlignment="Top" Width="290" Background="#D9D9D9" Foreground="#747373" Height="30"/>
        <ComboBox HorizontalAlignment="Left" Margin="126,240,0,0" VerticalAlignment="Top" Width="290" Background="#D9D9D9" Foreground="#747373" Height="30"/>
        <ComboBox HorizontalAlignment="Left" Margin="126,284,0,0" VerticalAlignment="Top" Width="290" Background="#D9D9D9" Foreground="#747373" Height="30"/>
        <ComboBox HorizontalAlignment="Left" Margin="126,331,0,0" VerticalAlignment="Top" Width="290" Background="#D9D9D9" Foreground="#747373" Height="30"/>
        <Button x:Name="ButtonSave" FontSize="15" Content="Сохранить данные" HorizontalAlignment="Left" Margin="529,221,0,0" VerticalAlignment="Top" Foreground="White" Height="36" Width="160" Background="#34495E" />
        <Button x:Name="ButtonDel" FontSize="15" Content="Удалить данные" HorizontalAlignment="Left" Margin="529,275,0,0" VerticalAlignment="Top" Foreground="White" Height="36" Width="160" Background="#34495E" />
       
        <Button x:Name="ButtonDel_Копировать" FontSize="15" Content="Удалить данные" HorizontalAlignment="Left" Margin="449,27,0,0" VerticalAlignment="Top" Foreground="White" Height="33" Width="40" Background="#34495E" Click="ButtonDel_Копировать_Click" />
    </Grid>
</Window>
